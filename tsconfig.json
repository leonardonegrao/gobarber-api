{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@/appointments/*": ["modules/appointments/*"],
      "@/users/*" : ["modules/users/*"],
      "@/config/*": ["config/*"],
      "@/errors/*": ["shared/errors/*"],
      "@/infra/*": ["shared/infra/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
